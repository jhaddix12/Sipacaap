<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, user-scalable=1.0, maximun-scale=1.0, minimum-scale=1.0"
    />
    <meta http-equiv="X-UA-Compatible" content="ie-edge">
    <title>{% block title %} Bienvenido!{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/main.css') }}" />
    <script src="{{asset('https://kit.fontawesome.com/2c36e9b7b1.js')}}"></script>
    {% block stylesheets %}{% endblock %}
  </head>
  <body>
    <header class="header">
      <h4 class="header__numero">+506-8956-6454</h4>
      <div class="header__container">
        <div class="header__container--circulo">
          <img
            src="{{ asset('img/hola.png') }}"
            alt=""
            class="header__imagen"
          />
        </div>
        <div class="header__">
          <ul class="header__list">
          <li class="header__item">Español</li>
          <li class="header__item">Inglés</li>
        </ul>
        </div>
        
      </div>
      {% if app.user %}
        <div class="mb-3">
          Bienvenido {{ app.user.username }}
        </div>
    {% endif %}
    </header>

    <nav class="nav">
      <a href="{{ path('home') }}" class="nav__logo"><img class="nav__imagen"src="{{ asset('img/logoprincipal.png') }}" alt=""></a>
      <span class="nav menu-icon"></span>
      <ul class="nav__list">
        <li class="nav__items">
          <a href="{{ path('home') }}" class="nav__link">¿Quienes somos?</a>
        </li>
        <li class="nav__items">
          <a href="{{ path('proyectos') }}" class="nav__link">Proyectos</a>
        </li>
        <li class="nav__items">
          <a href="#" class="nav__link">Voluntariado</a>
        </li>
        <li class="nav__items--contact">
          <a href="{{ path('contact') }}" class="nav__link">Contáctenos</a>
        </li>
      </ul>
    </nav>
    {% block body %}{% endblock %} {% block javascripts %}{% endblock %}

    <footer class="footer">
      <div class="footer__container">
        <div class="footer__container--left">
          <a href="{{ asset('https://www.instagram.com') }}" target="_blank"
            ><img class="instagramLogo" src="{{ asset('img/inatagram.png') }}"
          /></a>
          <a href="{{ asset('https://www.facebook.com') }}" target="_blank"
            ><img class="facebookLogo" src="{{ asset('img/facebook_.png') }}"
          /></a>
         
        </div>
        <div class="footer__container__logo">
          <img class="companyLogo" src="{{ asset('img/logosindicato.png') }}" />
        </div>
        <div class="footer__container--right">
            <div class="footer__container--labelsLeft">
                <label class="labelFooter label__footer--contacts">Contactos</label><br><br>
                <label class="labelFooter label__footer--telephoneNumber">Número de telefono:</label>
                <label class="labelFooter label__footer--number" >+506-8956-6454</label><br>
            </div>
             <div class="footer__container--labelsRight">   
                <label class="labelFooter label__footer--email">Correo electronico:</label>
                <label class="labelFooter label__footer--emailAddress" > freddyrcordero@hotmail.com</label>
            </div>
        </div>
      </div>
    </footer>

    <script src="{{
        asset('https://code.jquery.com/jquery-3.5.1.min.js')
      }}"></script>
    <script src="{{ asset('js/scripts.js') }}"></script>
  </body>
</html>
